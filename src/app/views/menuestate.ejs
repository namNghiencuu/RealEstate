<!DOCTYPE html>
<html>

<head>
  <title>Real Estate Platform</title>
  <link rel="shortcut icon" href="/images/PageLogo/logo.png" />
  <link rel="stylesheet" href="/lib/fontawesome-free-5.8.1-web/css/all.min.css" />

  <meta charset="utf-8" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/menuestate.css" />
  <script>
    window.FontAwesomeConfig = {
      searchPseudoElements: true
    };
  </script>
  <script data-search-pseudo-elements defer src="/lib/fontawesome-free-5.8.1-web/js/all.min.js"></script>
</head>

<body>
  <section class="body1">
    <!--Header-->
    <%- include navbar.ejs %>

    <!--Main-->
    <div class="main">
      <strong class="text">Can I help you?</strong>
      <section>
        <div class="search">
          <div class="icon">
            <i class="fas fa-search"></i>
          </div>
          <form class="form">
            <div class="row">
              <div class="option">
                <select>
                  <option>Property Type
                  <option>Home for Sale</option>
                  <option>Home For Rent</option>
                  </option>
                </select>
              </div>
              <div class="option">
                <select>
                  <option>City</option>
                  <option>Ha Noi</option>
                  <option>Ho Chi Minh</option>
                  <option>Can Tho</option>
                </select>
              </div>
              <div class="option">
                <select>
                  <option>District</option>
                  <option>District 4</option>
                  <option>District 1</option>
                  <option>Phu Nhuan District</option>
                </select>
              </div>
              <div class="option">
                <select>
                  <option>Price</option>
                  <option>10$-15$</option>
                  <option>16$-21$</option>
                  <option>22$-</option>
                </select>
              </div>
              <div class="option">
                <input type="submit" name="" value="Search" />
              </div>
            </div>
          </form>
        </div>
      </section>
    </div>
    <!--Footer-->
    <%- include footer.ejs %>

  </section>
</body>

</html>